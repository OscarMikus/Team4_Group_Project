<%- include ('../partials/header') %> <%- include ('../partials/menu') %>
<!doctype html>
<main>
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </head>
  <body>
  <div class="container">
    <table id="table" class="table">
      <thead>
        <tr>
          <td>Name</td>
          <td>Location</td>
      </tr>
      </thead>
      <tbody>
        <% users.forEach(element => { %>
              <tr>
              <form action="/friends/remove" method="POST"></form>
                <td>
                  <input type="hidden" name="username" value="<%- element.username %>">
                  <button type="submit" class="btn btn-outline-danger"><%- element.username %>
                </td>
                <td><%=element.user_city %></td>
                <td>
                  <input type="hidden" name="username" value="<%- element.username %>">
                  <button type="submit" class="btn btn-outline-danger">Remove Friend</button>
                </td>
              </form>
              </tr>
            <% }) %>
      </tbody>
    </table>
  </div>
</body>
</main>

<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ModalLabel">Friend!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="event-modal">
                <div class="mb-3">
                    <h1>User: </h1>
                    <p id="username"></p>
                </div>
                <div class="mb-3">
                    <h1>Location: </h1>
                    <p id="city"></p>
                </div>
                <div class="mb-3">
                    <h1>Difficulty Range: </h1>
                    <p id="max_diff"></p>
                </div>
                <div class="mb-3">
                    <h1>Bio: </h1>
                    <p id="bio"></p>
                </div>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button id="remove_button" type="button" class="btn btn-primary">Remove</button>
        </div>
      </div>
    </div>
  </div>

<%- include ('../partials/footer') %>

